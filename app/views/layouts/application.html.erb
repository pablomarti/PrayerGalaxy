<!DOCTYPE html>
<html>
	<head>
	  <title>Prayer Galaxy</title>
	  	<%= stylesheet_link_tag    "application" %>
	  	<%= javascript_include_tag "application" %>
	  	<%= csrf_meta_tags %>
	
	<script type="text/javascript" language="javascript">
		$(document).ready(function(){
			$("#loginButton").click(function(){
				$.modal("<%= escape_javascript(render 'loginBox') %>", {focus:false});		
			});

			<% if !params[:notice].nil? %>
				alert("<%= params[:notice] %>");
			<% end %>
		});		 
	</script>

	</head>

	<body>
		<div id="block">
			<div id="mainBlock">
				<div id="header">
					<%= render "header" %>
				</div>

				<div id="content">
					<%= sanitize yield %>
				</div>

				<div id="footer">
					<%= render "footer" %>
				</div>
			</div>
		</div>

		<div id="clearFooter">
			<div id="clearFooterAux">
				Copyright &copy; 2011 Prayergalaxy - All rights reserved 
				| Contact Us
				| Advertising
				| User Agreement
				| Privacy Policy
				| Help
			</div>
		</div>
	</body>
</html>
