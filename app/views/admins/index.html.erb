<h1>Listing admins</h1>

<table>
  <tr>
    <th>Admin level</th>
    <th>Name</th>
    <th>Lastname</th>
    <th>Email</th>
    <th>Active</th>
    <th>Password hash</th>
    <th>Password salt</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @admins.each do |admin| %>
  <tr>
    <td><%= admin.admin_level_id %></td>
    <td><%= admin.name %></td>
    <td><%= admin.lastname %></td>
    <td><%= admin.email %></td>
    <td><%= admin.active %></td>
    <td><%= admin.password_hash %></td>
    <td><%= admin.password_salt %></td>
    <td><%= link_to 'Show', admin %></td>
    <td><%= link_to 'Edit', edit_admin_path(admin) %></td>
    <td><%= link_to 'Destroy', admin, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

