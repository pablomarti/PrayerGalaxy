<div id="loginAdminBox">
	<div id="loginAdminBoxContent">
		<%= form_tag admin_login_path, :id => "loginForm" do %>
			<div class="field">
				<%= text_field_tag :email, params[:email], :placeholder => "Username" %>
			</div>

			<div class="field">
				<%= password_field_tag :password, params[:password], :placeholder => "Password" %>
			</div>

			<div class="actions">
				<%= link_to "", "#", :id => "submitAdminLogin" %>
			</div>
		<% end %>
	</div>
</div>

<% if @message != "" %>
	<script type="text/javascript">
		alert("<%= @message %>");
	</script>
<% end %>