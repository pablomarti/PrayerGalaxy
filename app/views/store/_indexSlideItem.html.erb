<div class="slide slideItem left">
	<div class="left slideImage">
		<%= image_tag indexSlideItem.image %>
	</div>

	<div class="right slideContent">
		<div class="slideItemName">
			<%= truncate(indexSlideItem.name, :length => 20) %>
		</div>

		<div>
			<%= truncate(indexSlideItem.description, :length => 150) %>
		</div>

		<div>
			<%= link_to "Buy it now!", store_product_path(indexSlideItem.id), :class => "linkBuyNow" %>
		</div>

		<div class="bigPrice">
			<%= number_to_currency(indexSlideItem.price, :unit => "$") %>
		</div>

		<div class="buyNowButton">
			<br />
			<%= link_to image_tag("buyNowButton.png"), store_product_path(indexSlideItem.id), :style => "background:none;" %>
		</div>
	</div>

	<div class="clear">
	</div>
</div>