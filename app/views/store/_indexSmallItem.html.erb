<div class="popularItem">
	<div class="popularItemPic left">
		<%= image_tag indexSmallItem.image %>
	</div>

	<div class="popularItemContent right">
		<span class="popularItemTitle"><%= truncate(indexSmallItem.name, :length => 18) %></span>

		<div class="popularItemDescription">
			<%= truncate(indexSmallItem.description, :length => 30) %>
		</div>

		<div class="popularItemPrice">
			<%= number_to_currency(indexSmallItem.price, :unit => "$") %>
		</div>
		
		<div class="buyNowButton">
			<%= link_to image_tag("buyNowButton.png"), store_product_path(indexSmallItem.id), :style => "background:none;" %>
		</div>
	</div>

	<div class="clear">
	</div>
</div>