<% @visions.each do |vision| %>
  <tr>
    <td><%= vision.description %></td>
    <td><%= vision.image1 %></td>
    <td><%= vision.image2 %></td>
    <td><%= vision.image3 %></td>
    <td><%= vision.video %></td>
    <td><%= link_to 'Show', vision %></td>
    <td><%= link_to 'Edit', edit_vision_path(vision) %></td>
    <td><%= link_to 'Destroy', vision, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

